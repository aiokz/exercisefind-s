#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
	
	int x, i, c =1;
	float fat = 1, s = 0;
	
	printf("Digite o valor de X: ");
	scanf("%d", &x);
	while(c <= 20){
		fat = 1;
		for (i = c; i >=1; i--){
		fat *= 1;
	}
	s +=(x/fat);
	c++;
	}
	s += x;
	printf("O resultado de S Ã©: %.2f",s);	
	return 0;
}
